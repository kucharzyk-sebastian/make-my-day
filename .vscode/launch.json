    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\manage.py",
            "args": ["test"],
            "django": true
        },
        {
            "name": "Django: Run server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\manage.py",
            "args": ["runserver"],
            "django": true
        },
        {
            "name": "Python: Linter",
            "type": "python",
            "module": "pylint",
            "args": [
                "--load-plugins=pylint_django",
                "--disable=django-not-configured",
                "./src"
            ],
            "request": "launch",
            "console": "integratedTerminal"
        }
    ]
}